package co.edu.uco.ucobet.generales.domain.city.rules.impl;

import java.util.UUID;

import co.edu.uco.ucobet.generales.application.secondaryports.repository.CityRepository;
import co.edu.uco.ucobet.generales.application.secondaryports.repository.StateRepository;
import co.edu.uco.ucobet.generales.domain.city.exceptions.CityIdDoesNotExistsException;
import co.edu.uco.ucobet.generales.domain.city.exceptions.CityStateDoesNotExistsException;
import co.edu.uco.ucobet.generales.domain.city.rules.CityStateDoesExistsRule;

public class CityStateDoesExistsRuleImpl implements CityStateDoesExistsRule {
	
	private final CityRepository stateRepository;

    public CityStateDoesExistsRuleImpl(final CityRepository stateRepository) {
        this.stateRepository = stateRepository;
    }

    @Override
    public void validate(final UUID stateId) {
        if (!stateRepository.existsById(stateId)) {
            throw CityStateDoesNotExistsException.create();
        }
    }
    
    
}
