package co.edu.uco.ucobet.generales.domain.city.exceptions;

import co.edu.uco.ucobet.generales.crosscutting.exceptions.RuleUcobetException;

public class CityIdDoesExistsException extends RuleUcobetException {

	private static final long serialVersionUID = 1L;

	private CityIdDoesNotExistsException(final String userMessage) {
        super(userMessage, userMessage, new Exception());
    }

	public static CityIdDoesNotExistsException create() {
		var userMessage = "No existe una ciudad con el ID proporcionado.";
		return new CityIdDoesNotExistsException(userMessage);
	}

}
